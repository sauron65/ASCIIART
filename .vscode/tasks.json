{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: clang++ build active file",
      "command": "clang++",
      "args": [
        // "-g",
        "-std=c++20",
        "-stdlib=libc++",
        "-I./include",
        "./main.cpp",
        "-o",
        "./main",
      ],
      "options": {
        "cwd": "./"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}