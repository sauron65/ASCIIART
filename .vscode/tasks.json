{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: clang++ build active file",
      "command": "clang++",
      "args": [
        "-g",
        "-std=c++20",
        "-stdlib=libc++",
        "-I${workspaceFolder}/include",		
        "${workspaceFolder}/main.cpp",
        "-o",
        "${workspaceFolder}/main",
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}